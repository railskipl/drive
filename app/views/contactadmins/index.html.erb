<%= link_to 'Publish News To All Registered Users', new_contactadmin_path %> | <%= link_to "Back", users_path%>

<h1>Listing News or Announcements</h1>


  <table class="admintable">
  <tr class="admintablehd">
    <td>Message</td>
    <td colspan=3 style="text-align: center !important;">Actions</td>
  </tr>

<% @contactadmins.each do |contactadmin| %>
  <tr>
    <td><%= contactadmin.message[0..20] rescue nil%></td>
    <td><%= link_to 'Show', contactadmin %></td>
    <td><%= link_to 'Edit', edit_contactadmin_path(contactadmin) %></td>
    <td><%= link_to 'Destroy', contactadmin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

