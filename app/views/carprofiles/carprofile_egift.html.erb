  <div class="grid_20 aboutme">
  <h4>My Logbooks</h4>
  
  <% if @logbooks.each do |logbook| %>
  <div class="blog_div">
    <% if logbook.carprofile_id == carprofile.id %>
      <a href="<%= logbook_path(logbook)%>" class="redlink"><%=  logbook.logbook_category.name%></a><br>
         <%= truncate(logbook.logbook_discription, :length => 500).html_safe  rescue nil %> <br/>
