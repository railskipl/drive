    <div class="grid_20 aboutme">
    
       <h4>Comments</h4>
        <div class="small_thumb"><%= image_tag (current_user.pic.url(:thumb)),:height => "77",:width => "77",:style=>"float:left;"%></div>

        <%= form_tag({:action => 'post_comment'},:method=>"post",:remote => true ) do %>
            <%= hidden_field_tag :car_profile_id,@carprofile.id %>
            <p>
              <%= text_area_tag :body,nil,:class=>"comment_tf2",:rows=>"4" %>
            </p>
            <%= submit_tag "Done", :style=>"margin-left:100px",:class=>"submit_btn"%>
        <% end %>

     <div id="comment_load">
          <%if @comments.empty? %>
              <div class="blog_div">
                <div class="blog_right"><br>
                  NO COMMENT FOUND </div>
              </div>
          <% else %>
              <%= render "car_profile_comments"%>
          <% end %>
        </div>

        
        
        
        
     
