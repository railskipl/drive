
    
    <div class="middle">
    
    <div class="container_20" style="background:#333; margin-bottom:10px">
    
      <%#= render 'shared/carousel' %> 
    
    </div>
    
    
        <div class="container_20">
        
        
        <div class="grid_20 title">
    
  			<div style="width:40%; float:left"><h4>Friends</h4></div>
        </div>
    
    <div class="grid_4">
    
    
    
      <ul class="message_menu">
    <li><%= link_to "All Friends", friendships_path %></li>
    <li><%= link_to "Incomming Requests", friend_request_user_path(current_user) %></li>
    <li><%= link_to "Pending Requests", friend_request_user_path(current_user,:type => "Pending") %></li>
    </ul>
    
    
      </div>
    
    <div class="grid_16">
	<% unless params["type"] %>
	  <% unless @user.requested_friends.empty?  %>
	  <div class="message"> 
        <div class="mail_content">
		<%= pluralize(@user.requested_friends.count, "requested friend") %><br/>
		<% @user.requested_friends.each do |requester| %>
      <%if requester.pic.blank? %>
      <img src="/assets/thumb_profile.jpg" alt="">
      <% else %>
      <%= image_tag requester.pic.url(:thumb) rescue nil%>
      <% end %>

		  <b><%= requester.first_name%></b><br/>
		  <%= link_to (image_tag "accept.png"),accept_friendship_path(:id => requester.id) ,:method => :post %>&nbsp;&nbsp;
		  <%= link_to (image_tag "reject.png"),decline_friendship_path(:id => requester.id),:method => :post,:confirm =>	"Are you sure, you want to decline #{requester.nickname}?" %>
        </div>
      </div>
      <% end %>
     <% end %>
    <% else %>
	  <% unless @user.pending_friends.empty?  %>
    <%= pluralize(@user.pending_friends.count, "pending friend") %><br/>

        <% @user.pending_friends.each do |pending_friend| %>
	   <div class="message"> 

        <div class="mail_content">
		

    <%if pending_friend.pic.blank? %>
    <img src="/assets/thumb_profile.jpg" alt="">
    <% else %>
    <%= image_tag pending_friend.pic.url(:thumb) %>
    <% end %>
		<%= pending_friend.first_name  %>
		<%= link_to "Cancel Request",cancel_friendship_path(:id => pending_friend.id) ,
		:confirm =>	"Cancel friendship request?" ,:method => :post%>
		 </div>
       </div>    
	   <% end %>
	  <% end %>
  <% end %>  

    

    </div>
        
    
        
    
    </div>
    


  
    
    </div>
    

</div>



