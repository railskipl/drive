<table>
<tr>
    <th>Name:</th>
    <th>Car type</th>
    <th>Engine Displacement</th>
</tr>

<% @car_models.each do |car_model|%>
  <tr>
    <td><%= car_model.name %></td>
    <td><%= car_model.car_make.name %></td>
    <td><%= car_model.engine_displacement %></td>
    <td><%= link_to 'Edit', edit_admin_car_model_path(car_model) %></td>
    <td><%= link_to 'Destroy',admin_car_model_path(car_model) ,:method => :delete , data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

