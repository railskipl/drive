<h2>Editing Page</h2>

<%= form_for [:admin, @page]  do |f| %>

	<p>
    <b><%= f.label :title %></b><br />
    <%= f.text_field :title, :class => 'text' %>
   </p>
 
  <div class="field">
  <p>
    <b><%= f.label :body %></b><br />
    <%= f.text_area :body,:rows=>7, :cols=>20,:style=> "width: 350px;" %>
  </p>
  </div>
  <div class="field">
  <p>
    <b><%= f.label :meta_title %></b><br />
    <%= f.text_field :meta_title,:style=> "width: 350px;" %>
  </p>
  </div>
  <div class="field">
  <p>
    <b><%= f.label :meta_description %></b><br />
    <%= f.text_area :meta_description,:rows=>7, :cols=>20,:style=> "width: 350px;" %>
  </p>
  </div>
  <div class="field">
  <p>
    <b><%= f.label :meta_keyword %></b><br />
    <%= f.text_area :meta_keyword,:rows=>7, :cols=>20,:style=> "width: 350px;" %>
  </p>
  </div>
  
   <div class="actions">
    <%= f.submit %>
  </div>

<%end%>