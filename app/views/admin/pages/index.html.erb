<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.body %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    <td><%= link_to 'Destroy',admin_page_path(page) ,:method => :delete , data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

