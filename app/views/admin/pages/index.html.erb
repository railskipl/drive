<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.body %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    <td><a href="/admin/pages/<%= page.id %>/delete" onclick="if(confirm('Are you sure you want to delete this page?'))  return true;  else  return false;" >Destroy</a></td>
  </tr>
<% end %>
</table>

