<div class="middle">
    
    <div class="container_20" style="background:#333; margin-bottom:10px">
    
    
    </div>
    
    
        <div class="container_20">
        
        
        <div class="grid_20 title">
    
  <div style="width:40%; float:left"><h4>Friends</h4></div>
  <!-- <div style="width:40%; float:right; text-align:right; margin-top:5px"><a href="#" class="compose">Create a List </a></div> -->
  
  
  
    
    
    </div>
    
    <div class="grid_4">
    
    
    
      <ul class="message_menu">
    <li><%= link_to "All Friends", friendships_path %></li>
    <li><%= link_to "Incomming Requests", friend_request_user_path(current_user) %></li>
    <li><%= link_to "Pending Requests", friend_request_user_path(current_user,:type => "Pending") %></li>
    </ul>
    
    
    
      </div>
    
    <div class="grid_16">
     
    
    <!-- <div><input name="" type="text" class="pe_tf message_search"></div> -->
     <% current_user.friends.each do |friend|%>
    <div class="message"> 
    
    <div class="tf">
    <!-- <input name="" type="checkbox" value=""> -->
    
    
    </div>
    <%if friend.pic.blank? %>
    <a href="<%= user_path(friend)%>"><img src="assets/thumb_profile.jpg" alt="">
    <%else%>
    <%= link_to image_tag(friend.pic.url(:thumb),:width => 50, :height => 40), user_path(friend)%>
    <% end %>
    <div class="mail_content">
    <div><a href="#" class="bluelink bold"><b><%= link_to friend.first_name, user_path(friend) %></b></a></div>
    
    
    </div>
    
    
    
    <ul class="action">
    
    
    <li><li><%= link_to (image_tag "delete.png"),delete_friendship_path(:id => friend.id) ,:method => :post,:confirm => "Are you sure, you want to remove #{friend.email}?" %></li></li>
    
    </ul>
    
    
    
    </div>
    <%end%>
    
    
    <!-- <ul class="tsc_pagination tsc_paginationA tsc_paginationA01">
      <%#= will_paginate @friends %>
    </ul> -->
    
    
    
    </div>
        
    
        
    
    </div>
    


  
    
    </div>
    

</div>













